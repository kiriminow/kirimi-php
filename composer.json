{
    "name": "kirimi/kirimi-php",
    "description": "Official PHP client library for the Kirimi WhatsApp API. Send messages, handle OTP verification, and manage WhatsApp communication with ease.",
    "type": "library",
    "keywords": [
        "kirimi",
        "whatsapp",
        "whatsapp-api",
        "whatsapp-bot",
        "whatsapp-client",
        "messaging",
        "otp",
        "otp-verification",
        "sms",
        "notification",
        "api-client",
        "php",
        "automation",
        "communication"
    ],
    "homepage": "https://github.com/yolkmonday/kirimi-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Ari Padrian",
            "email": "yolkmonday@gmail.com",
            "homepage": "https://github.com/yolkmonday",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "symfony/var-dumper": "^5.0 || ^6.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Kirimi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kirimi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "example": "php examples/demo.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 